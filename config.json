{
    "port": "8080",
    "routes": [
        {
            "name": "init",
            "path": "/init",
            "method": "GET",
            "upstreams": [
                {
                    "url": "env:UPSTREAM_URL",
                    "method": "POST",
                    "headers": {
                        "x-custom-header": "from init",
                        "content-type": "application/json"
                    },
                    "body":{}
                }
            ],
            "response": {
                "headers": {
                    "content-type": "application/json"
                },
                "status_code": 200,
                "body": {
                    "message": "hello from init"
